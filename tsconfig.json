{
  "files": [
    "src/app.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["reflect-metadata"],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./src/types/*"
      ]
    }
  }
}